<% layout("/layouts/boilerplate") %>
<body>
    
   <div class="listing-card col-6 offset-3">
    <h1>New listing</h1> <br><br>
    <form action="/listing" method="post" class="needs-validation" novalidate enctype="multipart/form-data">

        <div>
            <label for="title" class="form-label">Title</label>
            <input type="text" id="title" name="listing[title]" placeholder="title" class="form-control" required>
            <div class="invalid-feedback">Enter Valid Title</div>
           
        </div>
        <br>
        <div>
            <label for="description" class="form-label">Description</label>
             <textarea name="listing[description]" id="description" cols="30"
             rows="5" placeholder="Description" class="form-control" required></textarea>
             <div class="invalid-feedback">Enter Description</div>
               
        </div>
        <br>

        <!-- <div>
            <label for="image" class="form-label">Image Link</label>
            <input type="text" id="image" name="listing[image]" placeholder="image" class="form-control">
        </div> -->
        <div>
            <label for="image" class="form-label">Upload Image</label>
            <input type="file" id="image" name="listing[image]" class="form-control" required>
        </div>
        <br>
        <div>
            <label for="price" class="form-label">Price</label>
            <input type="number" id="price" name="listing[price]" placeholder="price" class="form-control" required>
            <div class="invalid-feedback">Enter Price</div>
        </div>
        <br>
        <div>
            <label for="location" class="form-label">Location</label>
            <input type="text" id="location" name="listing[location]" placeholder="location" class="form-control" required>
            <div class="invalid-feedback">Enter Location</div>
        </div>
        <br>
        <div>
            <label for="Country" class="form-label">Country</label>
            <input type="text" id="Country" name="listing[country]" placeholder="country" class="form-control" required>
            <div class="invalid-feedback">Enter Country</div>
        </div>
        <br>
        <button class="btn">Create Listing</button>
        
    </form>
   </div>
</body>
